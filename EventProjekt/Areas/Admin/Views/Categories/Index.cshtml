
@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="container">
 
        <h3>Kategorier</h3>

        <a class="btn btn-success" href="@Url.Action("Create", "Categories")">Opret</a>
        <br />
        <br />
        <table class=" table table-responsive table-striped">

            <thead>
                <tr>
                    <th>ID</th>
                    <th>Navn</th>
                    <th></th>
              
                </tr>
            </thead>
            @foreach (var cat in Model)
            {
                <tr>
                    <td>@cat.Id</td>
                    <td>@cat.Navn</td>
                    <td class="Categories">
                        <a class="btn btn-default" href="@Url.Action("Edit", "Categories", new { Id = cat.Id })">Rediger<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", "Categories", new { Id = cat.Id })">Slet<span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }


        </table>
   
</div>