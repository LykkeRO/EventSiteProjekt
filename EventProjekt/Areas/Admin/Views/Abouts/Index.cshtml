@model EventProjekt.Models.About
@{
    ViewBag.Title = "Edit";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content">
        <div class="row">
            <div class="form-horizontal" aria-describedby="helpBlock">
                <h3>Rediger About</h3>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Tekst, htmlAttributes: new { @class = "control-label col-md-0" })
                        <br />
                        @Html.EditorFor(model => model.Tekst, new { htmlAttributes = new { @class = "form-control", rows ="10", column="40" }})
                        @Html.ValidationMessageFor(model => model.Tekst, "", new { @class = "text-danger" })

                        <br />
                        <br />
                        <input type="submit" value="Gem" class="btn btn-default" />
                        <br />
                        <br />
       

                    </div>
                </div>
            </div>
        </div>
    </div>
}


