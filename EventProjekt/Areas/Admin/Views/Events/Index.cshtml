@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="container">
    <h3>Events</h3>
    <a class="btn btn-success" href="@Url.Action("Create", "Events")">Opret</a>
    <br />
    <br />
    <table class="table table-responsive">
        
        <thead>
            <tr>
                <th class="">Id</th>
                <th class="">Navn</th>   
                <th class="hidden-xs hidden-sm hidden-md hidden-lg">Beskrivelse</th>
                <th class="hidden-xs hidden-sm hidden-md hidden-lg">Fra</th>
                <th class="hidden-xs hidden-sm hidden-md hidden-lg">Til</th>
                <th class="hidden-xs hidden-sm hidden-md hidden-lg">Pris</th>
                <th class="hidden-xs hidden-sm hidden-md hidden-lg">Adresse</th>
                <th class="hidden-xs hidden-sm hidden-md hidden-lg">image</th>    
                <th class="hidden-xs hidden-sm hidden-md hidden-lg">Kategori Id</th>

                <th></th>
                <th></th>
           

            </tr>
        </thead>

        @foreach (var e in Model)
        {
            <tr>
                <td class="">@e.Id</td>
                <td class="">@e.Navn</td>
                <td class="hidden-xs hidden-sm hidden-md hidden-lg">@e.Beskrivelse</td>
                <td class="hidden-xs hidden-sm hidden-md hidden-lg">@e.EventStart</td>
                <td class="hidden-xs hidden-sm hidden-md hidden-lg">@e.EventEnd</td>
                <td class="hidden-xs hidden-sm hidden-md hidden-lg">@e.Pris</td>
                <td class="hidden-xs hidden-sm hidden-md hidden-lg">@e.Adresse</td>
                <td class="hidden-xs hidden-sm hidden-md hidden-lg">@e.Image</td>
                <td class="hidden-xs hidden-sm hidden-md hidden-lg">@e.KategoriId</td>
                <td></td>
                <td class="Actions">

                    <a class="btn btn-default" href="@Url.Action("Edit", "Events", new { Id = e.Id })">Rediger<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Events", new { Id = e.Id })">Slet <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>


        }





    </table>

</div>