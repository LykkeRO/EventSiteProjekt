@model IEnumerable<EventProjekt.Models.Event>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="visible-xs visible-sm">
    <div class="row">
        @foreach (var e in Model)
        {
            <div class="col-sm-12 HomeSlider">
                <img src="~/Content/images/@e.Image" class="img-responsive visible-xs visible-sm" alt="Responsive image" />
            </div>
        }
    </div>

</div>

<div id="sliderHome" class="carousel slide hidden-xs hidden-sm" data-ride="carousel">
    <!-- Indicators -->

    <ol class="carousel-indicators">
        @{ int i = 0;}
        @foreach (var e in Model)
            {
            <li data-target="#sliderHome" data-slide-to="@i" @(i == 0 ? "class=active" : null)></li>
            i++;
        }

    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        @{ i = 0;}
        @foreach (var e in Model)
            {
            <div class="item @(i == 0 ? "active" : null)">

                <img src="~/Content/images/@e.Image" class="img-responsive" alt="Responsive image" />

            </div>

            i++;
        }
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#sliderHome" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#sliderHome" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>



