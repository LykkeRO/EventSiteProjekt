@model EventProjekt.Models.Event
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid Detail">

    <div class="row">
        <div class="col-md-12 DetailImage">

            <img src="~/Content/images/@Model.Image" />
        </div>
    </div>

    <div class="container">
        <div class="row">
            <hr />
            <div class="col-md-6"><h5>@Model.Navn</h5>  @Model.Beskrivelse</div>
            <div class="col-md-6 infoDetail">
                <h5>Event start og slut tidpunkt:</h5>
                <span class="glyphicon glyphicon-time DetailIcon" aria-hidden="true"></span> @Model.EventStart @Model.EventEnd<br />
                <span class="glyphicon glyphicon-map-marker DetailIcon" aria-hidden="true"></span> Adresse: @Model.Adresse <br />
                  <span class="glyphicon glyphicon-credit-card DetailIcon" aria-hidden="true"></span> Pris: @Model.Pris

            </div>
        </div>
    </div>

</div>